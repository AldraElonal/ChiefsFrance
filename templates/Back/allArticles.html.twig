{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <ul class="list-group mt-4">
                    <li class="list-group-item bg-redchiefs text-light  font-weight-bold">Menu d'Administration</li>
                    {% if is_granted('ROLE_CONTRIBUTEUR') %}
                        <a href="{{ path('admin_articles') }}" class="list-group-item list-group-item-action">Edition des Articles</a>
                        <a href="{{ path('admin_editArticle') }}" class="list-group-item list-group-item-action">Ajouter un Article</a>
                    {% endif %}
                    {% if is_granted('ROLE_MANAGER') %}
                        <a href="#" class="list-group-item list-group-item-action">Edition du Roster</a>
                        <a href="" class="list-group-item list-group-item-action">Edition des Starters</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path("admin_user") }}" class="list-group-item list-group-item-action">Edition
                            des utilisateurs</a>
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-9 mt-4">
                <h1> Liste des Articles</h1>

                <table class="table table-striped  text-center table-hover">
                    <thead class="bg-redchiefs text-light">
                    <tr>
                        <th>
                            Article
                        </th>
                        <th>
                            extrait
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    </thead>
                    {% for article in articles %}
                        <tbody>
                        <tr>

                            <td>
                                {{ article.title }}
                            </td>
                            <td>
                                {{ article.content|striptags|slice(0,100) }}
                            </td>
                            <td>
                                <a href="{{ path('admin_editArticle',{id : article.id}) }}"
                                   class="btn btn-success">Editer l'article</a>
                                <a href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>



{% endblock %}

