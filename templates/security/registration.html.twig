{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Inscription</h1>
        {{ form_start(form) }}
        {{ form_row(form.username,{'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Pseudo'}}) }}
        {{ form_row(form.email,{'label': 'Email','attr': {'placeholder': 'Adresse email'}}) }}
        {{ form_row(form.password,{'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}
        {{ form_row(form.confirm_password,{'label': 'Confirmation du mot de passe','attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
        <button type="submit" class="btn btn-danger">Inscription</button>
        {{ form_row(form._token) }}
        {{ form_end(form,{'render_rest':false}) }}
    </div>
{% endblock %}